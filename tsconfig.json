{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [],
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules/@types/web-bluetooth",
    "**/node_modules/@types/web-bluetooth"
  ]
}
