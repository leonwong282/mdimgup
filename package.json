{
  "name": "mdimgup",
  "displayName": "Markdown Image Upload",
  "description": "Upload images in Markdown files to S3-compatible cloud storage (Cloudflare R2, AWS S3, MinIO, DigitalOcean Spaces, etc.)",
  "publisher": "YOUR-PUBLISHER-NAME",
  "repository": {
    "type": "git",
    "url": "https://github.com/leonwong282/mdimgup"
  },
  "license": "MIT",
  "keywords": [
    "markdown",
    "image",
    "upload",
    "cloudflare",
    "r2",
    "s3",
    "aws",
    "minio",
    "storage",
    "cloud",
    "cdn",
    "digitalocean",
    "spaces",
    "backblaze"
  ],
  "categories": [
    "Other",
    "Formatters"
  ],
  "bugs": {
    "url": "https://github.com/leonwong282/mdimgup/issues"
  },
  "homepage": "https://github.com/leonwong282/mdimgup#readme",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdimgup.uploadImages",
        "title": "Upload Markdown Images to Cloud Storage"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "mdimgup.uploadImages",
          "when": "resourceLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Image Uploader",
      "properties": {
        "mdimgup.storageProvider": {
          "type": "string",
          "enum": [
            "cloudflare-r2",
            "aws-s3",
            "s3-compatible"
          ],
          "default": "",
          "description": "Storage provider type. Leave empty for auto-detection from legacy settings."
        },
        "mdimgup.endpoint": {
          "type": "string",
          "default": "",
          "description": "Custom S3 endpoint URL (required for s3-compatible providers like MinIO, DigitalOcean Spaces)"
        },
        "mdimgup.region": {
          "type": "string",
          "default": "auto",
          "description": "AWS region (e.g., us-east-1, eu-west-1). Use 'auto' for Cloudflare R2."
        },
        "mdimgup.bucket": {
          "type": "string",
          "default": "",
          "description": "S3 bucket name"
        },
        "mdimgup.accessKey": {
          "type": "string",
          "default": "",
          "description": "S3 access key ID"
        },
        "mdimgup.secretKey": {
          "type": "string",
          "default": "",
          "description": "S3 secret access key"
        },
        "mdimgup.accountId": {
          "type": "string",
          "default": "",
          "description": "Cloudflare R2 account ID (required only for cloudflare-r2 provider)"
        },
        "mdimgup.cdnDomain": {
          "type": "string",
          "default": "",
          "description": "CDN domain for uploaded images (e.g., https://cdn.example.com)"
        },
        "mdimgup.pathPrefix": {
          "type": "string",
          "default": "blog",
          "description": "Path prefix for uploaded images (e.g., 'blog', 'images', or empty for root)"
        },
        "mdimgup.r2AccountId": {
          "type": "string",
          "default": "",
          "markdownDeprecationMessage": "**Deprecated**: Use `mdimgup.accountId` and `mdimgup.storageProvider` instead.",
          "deprecationMessage": "Deprecated: Use mdimgup.accountId and mdimgup.storageProvider instead."
        },
        "mdimgup.r2Bucket": {
          "type": "string",
          "default": "",
          "markdownDeprecationMessage": "**Deprecated**: Use `mdimgup.bucket` instead.",
          "deprecationMessage": "Deprecated: Use mdimgup.bucket instead."
        },
        "mdimgup.r2AccessKey": {
          "type": "string",
          "default": "",
          "markdownDeprecationMessage": "**Deprecated**: Use `mdimgup.accessKey` instead.",
          "deprecationMessage": "Deprecated: Use mdimgup.accessKey instead."
        },
        "mdimgup.r2SecretKey": {
          "type": "string",
          "default": "",
          "markdownDeprecationMessage": "**Deprecated**: Use `mdimgup.secretKey` instead.",
          "deprecationMessage": "Deprecated: Use mdimgup.secretKey instead."
        },
        "mdimgup.r2Domain": {
          "type": "string",
          "default": "",
          "markdownDeprecationMessage": "**Deprecated**: Use `mdimgup.cdnDomain` instead.",
          "deprecationMessage": "Deprecated: Use mdimgup.cdnDomain instead."
        },
        "mdimgup.maxWidth": {
          "type": "number",
          "default": 1280
        },
        "mdimgup.parallelUploads": {
          "type": "number",
          "default": 5
        },
        "mdimgup.useCache": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/mime-types": "^3.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.705.0",
    "crypto-js": "^4.2.0",
    "mime-types": "^3.0.1",
    "p-limit": "^6.1.0",
    "sharp": "^0.33.5"
  }
}
