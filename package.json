{
  "name": "mdimgup",
  "displayName": "Markdown Image Upload",
  "description": "My awesome extension for Markdown Image Upload",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdimgup.uploadImages",
        "title": "Upload Markdown Images to R2"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "mdimgup.uploadImages",
          "when": "resourceLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Image Uploader (R2)",
      "properties": {
        "mdimgup.r2AccountId": {
          "type": "string",
          "default": ""
        },
        "mdimgup.r2Bucket": {
          "type": "string",
          "default": ""
        },
        "mdimgup.r2AccessKey": {
          "type": "string",
          "default": ""
        },
        "mdimgup.r2SecretKey": {
          "type": "string",
          "default": ""
        },
        "mdimgup.r2Domain": {
          "type": "string",
          "default": ""
        },
        "mdimgup.maxWidth": {
          "type": "number",
          "default": 1280
        },
        "mdimgup.parallelUploads": {
          "type": "number",
          "default": 5
        },
        "mdimgup.useCache": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/mime-types": "^3.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "mime-types": "^3.0.1"
  }
}
